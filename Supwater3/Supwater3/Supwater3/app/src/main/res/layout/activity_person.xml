<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#e2f4fc"
    tools:context="com.example.lenovo.supwater.PersonActivity">
    <TextView
        android:id="@+id/zhuye"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="个人主页"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:id="@+id/a1"
        android:paddingTop="30dp"
        android:layout_below="@+id/zhuye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="账号："
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="30sp"
            android:text="zhanghao"
            android:id="@+id/zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/a1"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingTop="30sp"
        android:layout_below="@+id/a1"
        android:id="@+id/a2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="学号："
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="30dp"
            android:text="xuehao"
            android:id="@+id/xuehao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/a2"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:layout_below="@+id/a2"
        android:id="@+id/a3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="宿舍："
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="30sp"
            android:text="sushe"
            android:id="@+id/sushe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/a3"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:layout_below="@+id/a3"
        android:id="@+id/a4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="电话："
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="30sp"
            android:text="dianhua"
            android:id="@+id/dianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/a4"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:layout_below="@+id/a4"
        android:id="@+id/a5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="水票数："
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="30sp"
            android:text="shuipiaoshu"
            android:id="@+id/shuipiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/a5"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>
